{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {

    /* Base path so imports work cleanly */
    "baseUrl": ".",

    /* Optional aliases for cleaner imports later */
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@data/*": ["src/data/*"]
    }

  }
}
